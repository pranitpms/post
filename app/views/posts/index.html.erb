<section id="typography">
  <div class="page-header"><h1>
    Posts
  </h1></div>
  <% @posts.each do |post| %>
      <div id="content">
        <div class="row">
          <div class="span1.5">
            <div class="well ">
              <% (@user = User.all).each do |u|%>
                  <% if post.name == u.username %>
                      <%= image_tag u.avatar_url(:thumb) %>
                  <% end %>
              <%end %>
            </div>
          </div>
          <div class="span2">
            <div class="well ">
          <span class="label label-info">
     <h4> <%= post.name%></h4>
    </span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="span8">
            <div class="well ">
              <h3><%=link_to post.title , post %></h3>
              <h6><%= post.created_at.strftime('%b %d, %Y')%></h6>
              <hr/>
              <blockquote>
                <p><%= post.content %></p>
              </blockquote>
              rate : <%= rating_for post, "post" %>
              <p><%= link_to 'Show', post, class:"more" %> |
                <% if can? :destroy, post %>
                    <%= link_to "Destroy", post, class:"more",:method => :delete, :confirm => "Are you sure?" %>
                <% end %>   </p>
            </div>
          </div>
        </div>
      </div>
      <hr/>
  <% end %>


  <%= paginate @posts %>


</section>