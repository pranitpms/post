<section id="forms">
  <div class="row">
    <div class="span10 offset1">

<h1>Listing events</h1>
<% @events.each do |event| %>
  <div id="box1">
       <div id="box2">
         <ul class="style1">
           <li class="first"><h3><div class="avatar"></div>Event name : <%= event.name %></h3>  </li>
            </ul>
            
           </div> 
         <div>
         <p><%= link_to 'Show', event, class:"more" %>
                <%= link_to "Destroy", event, class:"more",:method => :delete, :confirm => "Are you sure?" %>
               </p>          
       </div>
        <hr/>
      </div>

<%end%>
      </div>
</div>
    </section>